{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "lib": ["DOM"],
  },
  "exclude": ["*.js"]
}
